body{
	background:#f1f1f1;
}

.container{
	max-width:640px;
	margin:auto;
	
	-webkit-transition:-webkit-transform .35s ease-out;
	-webkit-transform-origin:right center;
	-moz-transform-style: preserve-3d;
	-webkit-backface-visibility:hidden ;
}

.body:after{
	content:"";
	visibility:hidden;
	height:0;
	display:block;
	clear:both;
}
/****/
/***************/
.glist2_ul{
	/*width:310px;*/
	margin:10px auto;
	position: relative;
	/*height:0px;
	overflow: hidden;*/
	/*min-height:300px;*/
	overflow: hidden;
	/*visibility: hidden;*/
	margin-bottom: 30px;
	width:100%;
	padding: 0 5px;
	background: none repeat scroll 0 0 #ffffff;
}
.glist2_ul:empty, .glist2_ul.empty{
	height: 300px;
	background: url(../imgs/w_19.png) no-repeat center center;
	-webkit-background-size: 250px auto;
}
.glist2_ul>div{
	width:50%;
	float:left;
}
/*.glist2_ul[style*="height"]{
	overflow: visible;
	visibility: visible;
}*/
.glist2_ul li{
	/*float:left;*/
}
/*.glist2_ul li:not([style*="position"]){display: none;}*/
.glist2_ul li a{
	display: block;
	margin: 6px 3px;
	padding:5px;
	-webkit-box-sizing:border-box;
	border:1px solid #ced3d7;
	-webkit-border-image: url(../imgs/border.gif) 2 stretch;
	border-radius: 3px;
	background:#ffffff;
	position:relative;
}
.glist2_ul li a .tag{
	display: inline-block;
	max-width: 58px;
	min-width:35px;
	height: 20px;
	/* text-align: center; */
	line-height: 20px;
	color: #ffffff;
	background: url(../imgs/w_7.png?a=2) no-repeat right 0, -webkit-gradient(linear, 0 0, 100% 0, from(#ff5366), to(#ff5366)) no-repeat 0 0;
	-webkit-background-size: 40px auto,30px 20px;
	position: absolute;
	z-index: 10;
	left: -4px;
	top: 20px;
	font-size: 12px;
	text-indent: 4px;
	padding-right: 6px;
	overflow:hidden;
}

.glist2_ul li span.img_wrap{
	display: block;
	/*width:133px;
	height:157px;*/
	width:100%;
	height:auto;
	overflow: hidden;
	margin-bottom:5px;
}
.glist2_ul li span.img_wrap img{
	width:100%;
}

.glist2_ul p{
	overflow: hidden;
	line-height: 15px;
	padding:5px 0;
}

.glist2_ul .title{
	color:#4a4a4a;
	font-size:11px;
	/*display: inline-block;
	white-space: nowrap;
	overflow: hidden;
	text-overflow:ellipsis;*/
}

.glist2_ul .price1, .glist2_ul .price2{
	display: inline-block;
	font-size:12px;
	color:#ff5366;
	margin-right:5px;
}
.glist2_ul .price2{
	display: none;
	color:#7f8c8d;
	font-size:9px;
	text-decoration: line-through;
	float:right;
}
.glist2_ul .discount{
	font-size:8px;
	display: inline-block;
	color:#ffffff;
	border-radius:10px;
	line-height:13px;
	height: 13px;
	padding:0 5px;
	background:#3e3e3e;
}

.glist2_ul .icon_fav{
	float: right;
	display: inline-block;
	width:20px;
	height:20px;
	background: url(../imgs/w_7.png) no-repeat center -248px;
	-webkit-background-size: 40px auto;
}
.glist2_ul .icon_fav.on{
	background-position: center -288px;
}
.glist2_ul.glist_grid .price2{display: none;}

.loading_element {
	visibility:hidden;
	position: relative;
	height: 30px;
	width: 100%!important;
	bottom: 0!important;
	top: inherit!important;
}
.glist2_ul.isLoading ~ .loading_element{
	visibility:visible;
}